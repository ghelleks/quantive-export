# Quantive Export Local Debug Configuration
# Copy this file to .env and fill in your actual values

# Required: Quantive API credentials
QUANTIVE_API_TOKEN=your_api_token_here
QUANTIVE_ACCOUNT_ID=your_account_id_here

# Required: Sessions to process (CSV or JSON array)
SESSIONS=Q4 2024,Annual 2025
# Alternative JSON format:
# SESSIONS=["Q4 2024","Annual 2025"]

# Optional: Quantive API base URL (defaults to US instance)
QUANTIVE_BASE_URL=https://app.us.quantive.com/results/api/v1

# Optional: Recent activity lookback period in days (default: 7)
LOOKBACK_DAYS=7

# Export targets (provide at least one):
# Google Doc ID for formatted report
GOOGLE_DOC_ID=your_google_doc_id_here

# OR plain text file for markdown export  
TEXT_FILE_ID=your_drive_file_id_here
# Alternative: TEXT_FILE_URL=https://drive.google.com/file/d/your_file_id/view